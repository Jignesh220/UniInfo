<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/acme"
        android:text="UniInfo"
        android:textColor="#03A9F4"
        android:textSize="25sp" />


    <ListView
        android:id="@+id/list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro"
        android:layout_margin="30dp"
        tools:listitem="@layout/activity_university_name"
        android:layout_above="@+id/cCountry"
        >
    </ListView>

    <EditText
        android:id="@+id/cCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/maven_pro_medium"
        android:hint="Enter Country Name"
        android:paddingVertical="15dp"
        android:paddingStart="30dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/iButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button"
        android:fontFamily="@font/maven_pro_bold"
        android:text="Get list"
        android:textSize="12sp"
        android:textColor="@color/white"
        />
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@anim/progress_bg"
        android:progress="0"
        />
</RelativeLayout>
