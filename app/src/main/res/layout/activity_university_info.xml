<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroun2"
    >
    <TextView
        android:id="@+id/universityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="university"
       android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/maven_pro_bold"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State"
        android:layout_below="@+id/universityName"
       android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/maven_pro_medium"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vadodra"
        android:layout_below="@+id/city"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/maven_pro_medium"
        android:textColor="#60C9F8"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="country"
        android:layout_below="@+id/cityName"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/maven_pro_medium"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/countryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="India"
        android:layout_below="@+id/country"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/maven_pro_medium"
        android:textColor="#60C9F8"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="website"
        android:layout_below="@+id/countryName"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/maven_pro_medium"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/webLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="paruluniversity.ac.in"
        android:layout_below="@+id/web"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/maven_pro_medium"
        android:textColor="#60C9F8"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="30dp"
        android:textSize="20sp"
        android:layout_marginEnd="15dp"
        />
</RelativeLayout>
